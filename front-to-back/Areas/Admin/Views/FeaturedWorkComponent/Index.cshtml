@using front_to_back.Areas.Admin.ViewModels.FeaturedWorkComponent
@model FeaturedWorkComponentIndexViewModel



<div class="main-panel">
    <div class="content-wrapper">

        <div class="row">
            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Featured Work Component</h4>
                        @if (Model.FeaturedWorkComponent != null)
                        {

                            <div class="table-responsive">
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th>Id</th>
                                            <th>Title</th>
                                            <th>Actions</th>

                                        </tr>
                                    </thead>
                                    <tbody>


                                        <tr>
                                            <td>@Model.FeaturedWorkComponent.Id</td>
                                            <td>@Model.FeaturedWorkComponent.Title</td>
                                            <td class="d-flex ">
                                                <a asp-action="update" asp-controller="featuredworkcomponent" asp-area="admin" asp-route-id="@Model.FeaturedWorkComponent.Id" class="btn btn-primary">Update </a>
                                                <a onclick="confirm('Are you sure?')" asp-action="delete" asp-controller="featuredworkcomponent" asp-area="admin" asp-route-id="@Model.FeaturedWorkComponent.Id" class="btn btn-danger">delete </a>
                                                <a asp-action="details" asp-controller="featuredworkcomponent" asp-area="admin" asp-route-id="@Model.FeaturedWorkComponent.Id" class="btn btn-info">details </a>
                                            </td>

                                        </tr>



                                    </tbody>
                                </table>
                            </div>
                        }
                        else
                        {
                            <a class="btn btn-primary" asp-action="create" asp-controller="featuredworkcomponent" asp-area="admin">Create featured work component</a>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

